<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/categoryCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/halved_standard_margins"
    app:cardCornerRadius="@dimen/halved_standard_margins">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/categoryBtn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/categoryNormal"
            android:elevation="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/categorySearchTxt"
            style="@style/headlineTextFB"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/standard_margins"
            android:elevation="@dimen/halved_standard_margins"
            android:text="@string/categoryText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="@dimen/standard_margins"
            android:background="@drawable/img_search_all"
            android:elevation="@dimen/halved_standard_margins"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
