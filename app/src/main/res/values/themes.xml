<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FirstByte" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:textColorSecondary">@color/iconColor</item>
        <item name="colorPrimary">@color/bottomNavButtonsClicked</item>
        <item name="colorPrimaryDark">@color/androidsColor</item>
        <item name="colorSecondary">#0284BF</item>
        <item name="android:itemBackground">@color/secondaryColor</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:windowBackground">@drawable/screen_background</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="myAlertDialogTheme">
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:textColorSecondary">@color/iconColor</item>
        <item name="android:background">@color/secondaryColor</item>
    </style>

    <style name="Theme.FirstByte.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FirstByte.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FirstByte.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>